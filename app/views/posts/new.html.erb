
<h1>New Post</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:post, url: posts_url) do |f| %>
			<%= f.label :contents %>
			<%= f.text_field :contents, class: "form-control" %>

			<%= f.hidden_field :author, value: @user.name %>

			<%= f.submit "Create Post" %>
		<% end %>
	</div>
</div>